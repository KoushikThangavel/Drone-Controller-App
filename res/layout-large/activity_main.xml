<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--    android:background="@drawable/default_light_1">-->

    <!-- Battery Icon -->
    <ImageView
        android:id="@+id/battery_icon"
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:src="@drawable/battery_100_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp" />

    <!-- Battery Text -->
    <TextView
        android:id="@+id/battery_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/battery_icon"
        android:layout_marginTop="21dp"
        android:layout_marginStart="0dp" />

    <!-- Link Quality Icon -->
    <ImageView
        android:id="@+id/linkQuality_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:scaleX="1.6"
        android:scaleY="1.6"
        android:layout_marginTop="21dp"
        android:src="@drawable/ic_wifi_tethering_black_18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/battery_text" />

    <!-- Link Quality Text -->
    <TextView
        android:id="@+id/linkQuality_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintBottom_toBottomOf="@id/linkQuality_icon"
        app:layout_constraintStart_toEndOf="@id/linkQuality_icon"
        android:layout_marginStart="4dp" />

    <!-- Theme Switch -->

    <!-- Connect Button -->

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/themeSwitch"
        android:layout_width="79dp"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:thumb="@drawable/thumb"
        app:layout_constraintEnd_toStartOf="@id/imageButton_connect"
        app:layout_constraintTop_toTopOf="parent"
        app:track="@drawable/track" />

    <!-- Settings Button -->


    <!-- Assistant Image -->
    <ImageButton
        android:id="@+id/imageButton_connect"
        android:layout_width="76dp"
        android:layout_height="67dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:background="@android:color/transparent"
        android:contentDescription="Connect Button"
        android:scaleType="fitCenter"
        android:scaleX="1.9"
        android:scaleY="1.9"
        android:src="@drawable/connect_light"
        app:layout_constraintEnd_toStartOf="@id/imageButton_settings"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton_settings"
        android:layout_width="88dp"
        android:layout_height="92dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:scaleX="2.6"
        android:scaleY="2.6"
        android:src="@drawable/settings_dark"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.08"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/assistantImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.08"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.13"
        android:src="@drawable/anime_girl"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/textViewDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!, "
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@id/imageButton_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Yaw Lock Button -->
    <ImageButton
        android:id="@+id/joystick_left_hlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_yawlock_selector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/joystick_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.34" />

    <!-- Sports Toggle -->
    <ToggleButton
        android:id="@+id/toggle_althold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_sports_selector"
        android:textOff=""
        android:textOn=""
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/joystick_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.34" />

    <!-- Joystick Left -->
    <com.MobileAnarchy.Android.Widgets.Joystick.JoystickView
        android:id="@+id/joystick_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:0.75"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/joystick_right"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97"
        app:layout_constraintWidth_percent="0.3" />


    <!-- Joystick Right -->
    <com.MobileAnarchy.Android.Widgets.Joystick.JoystickView
        android:id="@+id/joystick_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:0.75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.97"
        app:layout_constraintWidth_percent="0.3"
        />

    <!-- Arm/Disarm Switch -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/customSwitch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.06"
        app:layout_constraintDimensionRatio="2:1"
        android:onClick="arm"
        android:scaleX="1.6"
        android:scaleY="1.4"
        android:thumb="@drawable/ellipse_22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.595"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:track="@drawable/custom_switch_track" />

    <!-- Takeoff/Land Button -->
    <ImageButton
        android:id="@+id/toggle_takeoff_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_takeoff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/customSwitch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.8"/>

</androidx.constraintlayout.widget.ConstraintLayout>
