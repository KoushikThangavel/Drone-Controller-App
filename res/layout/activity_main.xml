    <!-- Welcome Text -->
    <TextView
        android:id="@+id/textViewDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome! "
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/imageButton_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

     <!-- Yaw Lock Button -->
    <ImageButton
        android:id="@+id/joystick_left_hlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_yawlock_selector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/joystick_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.34" />

    <!-- Sports Toggle -->
    <ToggleButton
        android:id="@+id/toggle_althold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_sports_selector"
        android:textOff=""
        android:textOn=""
        android:onClick="althold_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/joystick_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.34" />

    <!-- Joystick Left -->
     <com.MobileAnarchy.Android.Widgets.Joystick.JoystickView
         android:id="@+id/joystick_left"
         android:layout_width="0dp"
         android:layout_height="0dp"
         app:layout_constraintDimensionRatio="1:0.65"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toStartOf="@+id/joystick_right"
         app:layout_constraintHorizontal_bias="0.29"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintVertical_bias="0.95"
         app:layout_constraintWidth_percent="0.3" />

    <!-- Joystick Right -->
    <com.MobileAnarchy.Android.Widgets.Joystick.JoystickView
        android:id="@+id/joystick_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:0.65"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintWidth_percent="0.3"
        />

    <!-- Arm/Disarm Switch -->
     <androidx.appcompat.widget.SwitchCompat
         android:id="@+id/customSwitch"
         android:layout_width="0dp"
         android:layout_height="0dp"
         app:layout_constraintWidth_percent="0.07"
         app:layout_constraintDimensionRatio="2:1"
         android:onClick="arm"
         android:scaleX="1.6"
         android:scaleY="1.4"
         android:thumb="@drawable/ellipse_22"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintHorizontal_bias="0.49"
         app:layout_constraintVertical_bias="0.75"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:track="@drawable/custom_switch_track" />

     <!-- Takeoff/Land Button -->
    <ImageButton
        android:id="@+id/toggle_takeoff_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_takeoff"
        android:src="@drawable/ic_takeoff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/customSwitch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.8"/>

