     <!-- Theme Switch -->
     <androidx.appcompat.widget.SwitchCompat
         android:id="@+id/themeSwitch"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:scaleX="0.6"
         android:scaleY="0.6"
         android:thumb="@drawable/thumb"
         app:track="@drawable/track"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintEnd_toStartOf="@id/imageButton_connect"
         android:layout_marginTop="6dp"
         android:layout_marginEnd="0dp" />

    <!-- Connect Button -->
    <ImageButton
        android:id="@+id/imageButton_connect"
        android:layout_width="56dp"
        android:layout_height="47dp"
        android:background="@android:color/transparent"
        android:src="@drawable/connect_light"
        android:onClick="connectpck"
        android:contentDescription="Connect Button"
        android:scaleType="fitCenter"
        android:scaleX="0.9"
        android:scaleY="0.9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageButton_settings"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="9dp"/>

    <!-- Settings Button -->
     <ImageButton
         android:id="@+id/imageButton_settings"
         android:layout_width="0dp"
         android:layout_height="0dp"
         android:background="@android:color/transparent"
         android:src="@drawable/settings_dark"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintWidth_percent="0.04"
         android:scaleX="1.5"
         android:scaleY="1.5"
         app:layout_constraintDimensionRatio="1:1"
         app:layout_constraintVertical_bias="0.027"
         app:layout_constraintHorizontal_bias="0.97"
        />

