<!-- res/layout/dialogue_gyro_mode.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_bg_light"
    android:layout_width="450dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_light"
    android:orientation="vertical"
    android:elevation="8dp"
    android:padding="24dp"
    android:gravity="start">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mode Info"
        android:textColor="#F2F2F2"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Message with icon -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="start|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gyro mode is currently enabled and Keep the drone on flat surface."
            android:textColor="#ffffff"
            android:textSize="16sp" />

<!--        <ImageView-->
<!--            android:layout_width="20dp"-->
<!--            android:layout_height="20dp"-->
<!--            android:layout_marginStart="6dp"-->
<!--            android:src="@drawable/ic_gyro"-->
<!--            android:contentDescription="Gyro Icon" />-->
    </LinearLayout>

    <!-- Button Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ok_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/ic_ok" />
    </LinearLayout>
</LinearLayout>
