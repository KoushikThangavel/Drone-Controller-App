<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base App Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#3EC2FC</item>
        <item name="colorPrimaryDark">#99acc1</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <!-- Light Theme -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    <style name="TransparentDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Dark Theme -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#000000</item>
    </style>


    <!-- LIGHT THEME -->
    <style name="LightDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:buttonStyle">@style/DialogButton_Light
        </item> <!-- custom button style -->
    </style>


    <style name="DarkDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">#2B2B2B</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:buttonStyle">@style/DialogButton_Dark</item>
    </style>


